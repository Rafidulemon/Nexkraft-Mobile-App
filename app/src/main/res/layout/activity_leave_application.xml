<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_nk"
    tools:context=".LeaveApplication"
    tools:openDrawer="start"
    android:id="@+id/drawer_layout">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_nk"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView10"
            android:layout_width="159dp"
            android:layout_height="92dp"
            android:fontFamily="@font/amaranth"
            android:text="Leave Application"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.083"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.073" />


        <EditText
            android:id="@+id/leave_name"
            android:layout_width="295dp"
            android:layout_height="32dp"
            android:background="#11100000"
            android:ems="10"
            android:hint="Enter your full name"
            android:inputType="text"
            android:paddingLeft="5dp"
            android:textColor="#156082"
            android:textColorHint="#156082"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.261" />

        <EditText
            android:id="@+id/leave_id"
            android:layout_width="295dp"
            android:layout_height="32dp"
            android:background="#11100000"
            android:ems="10"
            android:hint="Employee ID"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:textColor="#156082"
            android:textColorHint="#156082"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.319" />

        <EditText
            android:id="@+id/leave_email"
            android:layout_width="295dp"
            android:layout_height="32dp"
            android:background="#11100000"
            android:ems="10"
            android:hint="abc@nexkraft.com"
            android:inputType="textEmailAddress"
            android:paddingLeft="5dp"
            android:textColor="#156082"
            android:textColorHint="#156082"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.377" />

        <EditText
            android:id="@+id/leave_date"
            android:layout_width="295dp"
            android:layout_height="32dp"
            android:background="#11100000"
            android:ems="10"
            android:hint="Date of leave"
            android:inputType="text"
            android:paddingLeft="5dp"
            android:textColor="#156082"
            android:textColorHint="#156082"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.587" />

        <EditText
            android:id="@+id/leave_reason"
            android:layout_width="295dp"
            android:layout_height="70dp"
            android:background="#11100000"
            android:ems="10"
            android:hint="Reason for leave"
            android:inputType="text"
            android:paddingLeft="5dp"
            android:textColor="#156082"
            android:textColorHint="#156082"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.688" />

        <RadioGroup
            android:id="@+id/leave_type"
            android:layout_width="295dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.499">

            <RadioButton
                android:id="@+id/checkBox_sl"
                android:layout_width="94dp"
                android:layout_height="44dp"
                android:text="SL"
                android:textColor="#156082"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.182"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.599" />

            <RadioButton
                android:id="@+id/checkBox_pl"
                android:layout_width="94dp"
                android:layout_height="44dp"
                android:text="PL"
                android:textColor="#156082"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.599" />

            <RadioButton
                android:id="@+id/checkBox_cl"
                android:layout_width="94dp"
                android:layout_height="44dp"
                android:text="CL"
                android:textColor="#156082"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.82"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.599" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="239dp"
            android:layout_height="32dp"
            android:text="Type of leave:"
            android:textColor="#156082"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.343"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.434" />


        <Button
            android:id="@+id/leave_apply"
            android:layout_width="219dp"
            android:layout_height="50dp"
            android:text="Apply for Leave"
            app:backgroundTint="#EF3740"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.781" />

        <Button
            android:id="@+id/leave_view"
            android:layout_width="127dp"
            android:layout_height="50dp"
            android:backgroundTint="#156082"
            android:text="View PDF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.186"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.891" />

        <Button
            android:id="@+id/leave_send"
            android:layout_width="126dp"
            android:layout_height="47dp"
            android:backgroundTint="#EF3740"
            android:text="Send to HR"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.767"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.891" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>